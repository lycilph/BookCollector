<UserControl x:Class="BookCollector.Screens.Series.SeriesDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:panda="http://www.panda.com"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <panda:InvertBooleanConverter x:Key="invert_boolean_converter"/>
    </UserControl.Resources>
    
    <StackPanel>
        <TextBlock FontSize="20" 
                   Text="{Binding Title}"
                   ToolTip="{Binding Title}"/>
        <TextBlock Margin="0,10,0,0" Text="Tags"/>
        <DataGrid ItemsSource="{Binding Tags}"
                  Loaded="TagsLoaded"/>
        <DataGrid Margin="0,10,0,0"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  ItemsSource="{Binding Entries}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Title" Binding="{Binding Book.Title}" Width="4*"/>
                <DataGridCheckBoxColumn Header="Owned?" Binding="{Binding Path=MissingInCollection, Converter={StaticResource invert_boolean_converter}}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </StackPanel>
</UserControl>
